  body
    button#test TESTTTT
    .d-inline-block(style='margin:2rem;')
        div
            span(style='width:10rem; display:inline-block')
                |   Ad
            input#name(type="text")
        div
            span(style='width:10rem; display:inline-block')   Soyad
            input#surname(type="text")
        div
            span(style='width:10rem; display:inline-block')   email
            input#mail(type="mail")
        div
            span(style='width:10rem; display:inline-block')   Telefon Numarasi
            input#born(type="text" onkeypress='return event.charCode>= 48 &&event.charCode<= 57')
