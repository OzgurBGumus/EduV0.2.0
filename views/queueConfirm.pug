doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    block stylesheets
      link(href='https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css', rel='stylesheet', type='text/css')
      link(rel='stylesheet', href='/stylesheets/mainTopMenu.css')
      link(rel="stylesheet", href="/stylesheets/homePage.css")
      link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')
    block headersScripts
        script(src='https://code.jquery.com/jquery-3.4.1.js', integrity='sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=', crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/6bc33e778c.js', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title= title
  body
    .d-inline-block(style='margin:2rem;')
        div
            span(style='width:10rem; display:inline-block')
                |   Ad:
            input#name(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Soyad:
            input#surname(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Email:
            input#email(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Uyruk:
            input#nationality(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Ikamet edilen ulke:
            input#residence(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Ikamet edilen sehir:
            input#city(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Telefon Numarasi:
            input#mobileNo(type="text" onkeypress='return event.charCode>= 48 &&event.charCode<= 57')
        div
            span(style='width:10rem; display:inline-block')
                |   Iletisim Sekli:
            input#communication(type="text")
        div
            span(style='width:10rem; display:inline-block')
                |   Bize Not Birakin:
            textarea#notes(name="", cols="30", rows="10")
        span(style='border: 1px solid black; background-color:black; color:white; font-size:2rem; font-weight:bold padding:1rem; margin: 1rem;')
            span
                button#createNewReservation Complete

    .d-inline-block(style='margin: 2rem;')
        div
            |   School:
            span#confirmSchoolName
        div
            |   Location:
            span#confirmLocation
        div
            |   Program:
            span#confirmProgramName
                |   #{inputs.program}
        div
            |   Time:
            span#confirmTime
                |   #{inputs.time}
        div
            |   Date:
            span#confirmDate
                |   #{inputs.date}
        div
            |   Weeks:
            span#confirmWeek
                |   #{inputs.week}
        div
            |   accommodation:
            span#confirmAccommodation
                if inputs.accommodation == 'INeed'
                    |   Yes
                else
                    |   No
        div
            |   Airport Pickup:
            span#confirmAirport
                if inputs.airport == 'INeed'
                    |   Yes
                else
                    |   No
        div
            |   Healt Insurance:
            span#confirmHInsurance
                if inputs.hInsurance == 'INeed'
                    |   Yes
                else
                    |   No
    
    .d-inline-block(style='margin: 2rem;')
        #prices
            h3  Price List
    script(src="/javascripts/queueConfirm.js")
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    script(src='/pdfmake/build/pdfmake.min.js')
    script(src='/pdfmake/build/vfs_fonts.js')










