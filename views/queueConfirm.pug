        div
            |   School:
            span#schoolName
            |   #{inputs.school}
        div
            |   Program:
            span#programName
            |   #{inputs.program}
        div
            |   Time:
            |   #{inputs.time}
        div
            |   Date:
            span#Date
            |   #{inputs.date}
        div
            |   Weeks:
            span#week
                |   #{inputs.week}
        div
            |   accommodation:
            span#accommodation
                |   #{inputs.accommodation}
        div
            |   Airport Pickup:
            span#airport
                |   #{inputs.airport}
        div
            |   Healt Insurance:
            span#hInsurance
                |   #{inputs.hInsurance}
